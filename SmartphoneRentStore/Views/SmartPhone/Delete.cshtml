@model SmartPhoneDetailsViewModel

@{
    ViewBag.Title = "Delete Smartphone";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<form asp-action="Delete">
    <div class="row">
        <div class="col-md-4"></div>
        <img class="card-img-top" src="@Model.ImageUrl" alt="Smartphone Image">
    </div>
    <div class="col-md-8">
        <div class="form-group">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" class="form-control" disabled="disabled" />
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group">
            <label asp-for="Description" class="control-label"></label>
            <input asp-for="Description" class="form-control" disabled="disabled" />
        </div>
    </div>
    <div class="col-md-8">
        <div class="form-group">
            <label asp-for="PricePerMonth" class="control-label"></label>
            <input asp-for="PricePerMonth" class="form-control" disabled="disabled" />
        </div>
    </div>
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-primary" />
        </div>
    </div>
</form>