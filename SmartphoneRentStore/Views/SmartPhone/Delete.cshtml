@model SmartPhoneFormModel

@{
    ViewData["Title"] = "Delete Smartphone";
}

<h2>Delete Smartphone</h2>

<div>
    <h4>Are you sure you want to delete this smartphone?</h4>
    <div>
        <dl class="row">
            <dt class="col-sm-2"> 
                Title
            </dt>
            <dd class="col-sm-10">
                @Model.Title
            </dd>
            <dt class="col-sm-2">
                Description
            </dt>
            <dd class="col-sm-10">
                @Model.Description
            </dd>
            <dt class="col-sm-2">
                Price Per Month
            </dt>
            <dd class="col-sm-10">
                $@Model.PricePerMonth
            </dd>
        </dl>
    </div>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="CategoryId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
