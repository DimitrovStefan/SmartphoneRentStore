@model MySmartphonesViewModel

@{
    ViewBag.Title = "My Smartphones";
}

<h2 class="text-center">@ViewBag.Title</h2>
<hr />

<h4>My Added Smartphones</h4>

@if (!Model.AddedSmartphones.Any())
{
    <h2 class="text-center">You have no added smartphones yet!</h2>
}

<div class="row">
    @foreach (var smartphone in Model.AddedSmartphones)
    {
        @await Html.PartialAsync("~/Views/Smartphone/_SmartphonePartial.cshtml", smartphone)
    }
</div>

<h4>My Rented Smartphones</h4>

@if (!Model.RentedSmartphones.Any())
{
    <h2 class="text-center">You have no rented smartphones yet!</h2>
}

<div class="row">
    @foreach (var smartphone in Model.RentedSmartphones)
    {
        @await Html.PartialAsync("~/Views/Smartphone/_SmartphonePartial.cshtml", smartphone)
    }
</div>
